<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.zafu.viewpagerdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabPageIndicatorActivity"
            android:label="@string/title_activity_tab_page_indicator"
            android:theme="@style/StyledIndicators" >
        </activity>
        <activity
            android:name=".TabPageIndicatorActivity2"
            android:label="@string/title_activity_tab_page_indicator_activity2" 
            android:theme="@style/Theme.VPI">
        </activity>
    </application>

</manifest>